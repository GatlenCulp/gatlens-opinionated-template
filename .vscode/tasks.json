        {
            "label": "[Makefile] Test Quick 🧪",
            "detail": "",
            "type": "shell",
            "command": "make test-fastest",
            "group": "test",
            "icon": {
                "id": "zap",
                "color": "terminal.ansiRed"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
