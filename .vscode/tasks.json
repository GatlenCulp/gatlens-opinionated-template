{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Tasks file is approximately the same as the Makefile or Taskfile
    // It just allows these to be run by vscode/cursor when a certain
    // Action occurs in your IDE
    // It's not neccessary but available if desired!
    // Helpful for things like pytest watching
    "version": "2.0.0",
    "tasks": [
        // ############
        // ### MISC ###
        // ############
        {
            "label": "üíõ Show Welcome",
            "type": "shell",
            "command": "curl -s https://raw.githubusercontent.com/GatlenCulp/gatlens-opinionated-template/vscode-customization/welcome.txt",
            "group": "none",
            "icon": {
                "id": "heart-filled",
                "color": "terminal.ansiYellow"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        // ################# MAKE COMMANDS LINKED BELOW #################
        // 
        // ####################
        // ### DEV COMMANDS ###
        // ####################
        {
            "label": "‚úÖ [Makefile] Lint Project",
            "type": "shell",
            "command": "make lint",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "icon": {
                "id": "check-all",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üìè [Makefile] Format Project",
            "type": "shell",
            "command": "make format",
            "group": "build",
            "icon": {
                "id": "symbol-ruler",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        // ############
        // ### DOCS ###
        // ############
        {
            "label": "üìÑ [Makefile] Serve Documentation Locally",
            "type": "shell",
            "command": "make uv-docs-serve",
            "group": "none",
            "icon": {
                "id": "book",
                "color": "terminal.ansiCyan"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "üìï [Makefile] Build & Deploy Docs",
            "type": "shell",
            "command": "make uv-docs-deploy",
            "group": "none",
            "icon": {
                "id": "book",
                "color": "terminal.ansiCyan"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "isBackground": false,
            "problemMatcher": []
        },
        // #############
        // ### TESTS ###
        // #############
        {
            "label": "‚öóÔ∏è [Makefile] Run Tests",
            "type": "shell",
            "command": "make test",
            "group": "test",
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiMagenta"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "üß™ [Makefile] Run Quick Tests",
            "type": "shell",
            "command": "make test-fastest",
            "group": "test",
            "icon": {
                "id": "zap",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "ü™≤ [Makefile] Debug Last Failed Test",
            "type": "shell",
            "command": "make test-debug-last",
            "group": "test",
            "icon": {
                "id": "bug",
                "color": "terminal.ansiRed"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
    ]
}