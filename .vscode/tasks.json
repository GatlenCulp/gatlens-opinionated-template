{
    // ~ COLOR CONFIG ~
    // build = terminal.ansiBlue     (📏 Format, build-related tasks)
    // docs  = terminal.ansiGreen    (📄 Documentation tasks)
    // tests = terminal.ansiRed      (⚗️ Testing, debug, linting tasks)
    // misc  = terminal.ansiYellow   (💛 Welcome, utility tasks)
    "version": "2.0.0",
    "tasks": [
        // ####################
        // ### DEV COMMANDS ###
        // ####################
        {
            "label": "[Makefile] Build Lint ✅",
            "detail": "",
            "type": "shell",
            "command": "make lint",
            "group": {
                "kind": "test"
            },
            "icon": {
                "id": "check",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "[Makefile] Build Format 📏",
            "detail": "",
            "type": "shell",
            "command": "make format",
            "group": "build",
            "icon": {
                "id": "symbol-ruler",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "[Makefile] Build + Publish All 📦 (⇧ ⌘ B)",
            "detail": "",
            "type": "shell",
            "command": "make publish-all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "icon": {
                "id": "package",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        // ############
        // ### DOCS ###
        // ############
        {
            "label": "[Makefile] Docs Serve 📄",
