            "group": "none",
            "icon": {
                "id": "debug-rerun",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "[Makefile] Docs Publish 📕",
            "detail": "",
            "type": "shell",
            "command": "make docs-publish",
            "group": "build",
            "icon": {
                "id": "book",
                "color": "terminal.ansiGreen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "isBackground": false,
            "problemMatcher": []
